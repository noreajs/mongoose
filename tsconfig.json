{
    "include": [
        "lib/**/*"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "noImplicitThis": false,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "declaration": true
    }
}